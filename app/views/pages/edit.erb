  var editor = CodeMirror.fromTextArea('page_body', {
    width: "820px",
    height: "500px",
    parserfile: "parsexml.js",
    stylesheet: "/stylesheets/codemirror/xmlcolors.css?12312",
    path: "/javascripts/codemirror/",
