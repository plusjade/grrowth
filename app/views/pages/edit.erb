  });

  var cssEditor = CodeMirror.fromTextArea('page_css', {
    width: "820px",
    height: "500px",
    parserfile: "parsecss.js",
    stylesheet: "/stylesheets/codemirror/csscolors.css?3453",
    path: "/javascripts/codemirror/",
